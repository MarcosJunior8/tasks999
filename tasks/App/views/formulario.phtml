<section>


				<style>


				.table-add
				{
					font-family: '60', sans-serif;
				  color:grey;
				  font-size: 20px;
				  margin-left: 50px;
				  margin-bottom:  555px;
				  
				}

				h3{
					font-family: '20', sans-serif;
				  color:grey;
				  font-size: 40px;
				  margin-left: 30px;
				  margin-top: 30px;
				  margin-bottom: 40px;
				}
				.table-texto
				{	
					margin: auto 
					margin-bottom:15px;
				}
				textarea[id="Conteudo"]{
					
				margin: auto;
				min-width: 1100px;
				max-width: 2000px;
				padding-bottom: 20%;
				word-wrap: break-word;
       			word-break: break-all;
			
	
					
				}
				
